{
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/styled-components-react-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins":[
      {
        "name": "typescript-styled-plugin",
        "lint":{
          "validProperties":[
            "aspect-ratio",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-horizontal",
            "padding-vertical",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color"
          ]
        }
      }
    ]
  },
  "extends": "@tsconfig/react-native/tsconfig.json"
}
